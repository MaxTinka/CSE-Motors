<h1>Inventory Management</h1>

<% if (messages && messages.success) { %>
    <div class="message success"><%= messages.success %></div>
<% } %>

<% if (messages && messages.error) { %>
    <div class="message error"><%= messages.error %></div>
<% } %>

<% if (messages && messages.notice) { %>
    <div class="notice"><%= messages.notice %></div>
<% } %>

<div class="management-links">
    <a href="/inv/add-classification" class="btn">Add New Classification</a>
    <a href="/inv/add-inventory" class="btn">Add New Vehicle</a>
</div>

<% if (inventoryList && inventoryList.length > 0) { %>
  <div class="inventory-table-section">
    <h2>Current Inventory</h2>
    <table class="inventory-table">
      <thead>
        <tr>
          <th>Year</th>
          <th>Make</th>
          <th>Model</th>
          <th>Classification</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% inventoryList.forEach(function(vehicle) { %>
          <tr>
            <td><%= vehicle.inv_year %></td>
            <td><%= vehicle.inv_make %></td>
            <td><%= vehicle.inv_model %></td>
            <td><%= vehicle.classification_name %></td>
            <td>$<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %></td>
            <td class="actions">
              <a href="/inv/edit/<%= vehicle.inv_id %>" class="btn-edit">Edit</a>
              <a href="/inv/delete/<%= vehicle.inv_id %>" class="btn-delete">Delete</a>
              <a href="/inv/detail/<%= vehicle.inv_id %>" class="btn-view">View</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
<% } else { %>
  <p class="no-items">No vehicles in inventory. Add your first vehicle!</p>
<% } %>

<% if (classificationSelect) { %>
    <div class="classification-select">
        <h2>Existing Classifications</h2>
        <%- classificationSelect %>
    </div>
<% } %>
