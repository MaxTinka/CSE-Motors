<%- include('../partials/header') %>
<main class="form-container">
    <h1>Add New Classification</h1>
    
    <% if (message) { %>
        <div class="message error">
            <%= message %>
        </div>
    <% } %>
    
    <form action="/inv/add-classification" method="post" class="classification-form">
        <div class="form-group">
            <label for="classification_name">Classification Name:</label>
            <input 
                type="text" 
                name="classification_name" 
                id="classification_name" 
                required 
                pattern="^[a-zA-Z0-9]+$"
                title="No spaces or special characters allowed"
                <% if (classification_name) { %> value="<%= classification_name %>" <% } %>
            >
            <small>No spaces or special characters allowed</small>
        </div>
        
        <button type="submit" class="btn btn-primary">Add Classification</button>
        <a href="/inv/" class="btn btn-secondary">Cancel</a>
    </form>
</main>
<%- include('../partials/footer') %>
