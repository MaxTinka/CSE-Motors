<header>
  <div class="header-container">
    <div class="logo">
      <a href="/">
        <img src="/images/site/logo.png" alt="CSE Motors Logo">
      </a>
    </div>
    <nav class="main-nav">
      <ul>
        <li><a href="/" title="Home page">Home</a></li>
        <!-- Navigation links will be inserted here by utilities.getNav() -->
      </ul>
    </nav>
    <div class="account-links">
      <% if (loggedin) { %>
        <!-- Welcome link that goes to account management -->
        <a href="/account/" class="welcome-link">
          Welcome <%= accountData.account_firstname %>
        </a>
        <!-- Logout link (only when logged in) -->
        <a href="/account/logout">Logout</a>
      <% } else { %>
        <!-- My Account link (only when NOT logged in) -->
        <a href="/account/login">My Account</a>
      <% } %>
    </div>
  </div>
</header>
